@model TARge21Shop.Models.Weather.OpenWeatherViewModel

<h1></h1>

<div class="container">
    <h2>Forecast for Elva</h2>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Syss.Country" class="col-sm-2 col-form-label">Country and Id</label>
            @Html.DisplayFor(model => model.Syss.Country) (@Html.DisplayFor(model => model.Syss.Id))
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">City Name</label>
            @Html.DisplayFor(model => model.Name)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Temp" class="col-sm-2 col-form-label">Temperature</label>
            @{
                double TempCelsius = Model.Mains.Temp - 272.15; 
                TempCelsius = Math.Round(TempCelsius, 2);
            }
            @Html.DisplayFor(model => TempCelsius) &#8451;
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Feels_like" class="col-sm-2 col-form-label">Feels like</label>
            @{
                double FeelsLikeCelsius = Model.Mains.Feels_like - 272.15; 
                FeelsLikeCelsius = Math.Round(FeelsLikeCelsius, 2);
            }
            @Html.DisplayFor(model => FeelsLikeCelsius) &#8451;
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Weathers.Main" class="col-sm-2 col-form-label">Weather</label>
            @Html.DisplayFor(model => model.Weathers.Main)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Weathers.Description" class="col-sm-2 col-form-label">Weather Description</label>
            @Html.DisplayFor(model => model.Weathers.Description)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Humidity" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Mains.Humidity) %
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Mains.Pressure" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Mains.Pressure) Hpa
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Syss.Sunrise" class="col-sm-2 col-form-label"></label>
            @{
                DateTime sunrise = new DateTime(1970, 1, 1, 0, 0, 0, DateTimeKind.Utc).AddSeconds(Model.Syss.Sunrise).ToLocalTime();
            }
            @Html.DisplayFor(model => sunrise) (@Model.Syss.Sunrise Unix timestamp)
        </div>
        <hr />

        <div class="form-group row">
            <label asp-for="Syss.Sunset" class="col-sm-2 col-form-label"></label>
            @{
                DateTime sunset = new DateTime(1970, 1, 1, 0, 0, 0, DateTimeKind.Utc).AddSeconds(Model.Syss.Sunset).ToLocalTime();
            }
            @Html.DisplayFor(model => sunset) (@Model.Syss.Sunset Unix Timestamp)
        </div>
        <hr />

    </dl>
</div>